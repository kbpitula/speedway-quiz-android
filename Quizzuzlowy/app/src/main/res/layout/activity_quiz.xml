<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Quiz"
    android:background="@drawable/gol">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-8888258329683719/6546896786">
    </com.google.android.gms.ads.AdView>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="12dp"
        android:paddingBottom="20dp"
        android:scrollbarStyle="outsideOverlay">

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/nextPyt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpa"
                android:layout_marginTop="-200dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/przejscie" />

            <TextView
                android:id="@+id/pytania"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="75dp"
                android:background="#F4F4F4"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/punkty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-185dp"
                android:background="#F6F6F6"
                android:text="Punkty: 0"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zycie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpa"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="-185dp"
                android:layout_toRightOf="@+id/punkty"
                android:background="#FFFFFF"
                android:text="Zycia: 3"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/odpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:background="#00000000"
                app:srcCompat="@drawable/odpowiedza" />

            <ImageButton
                android:id="@+id/brawoOdpA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/brawo" />

            <ImageButton
                android:id="@+id/bladOdpA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="250dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/blad2" />

            <TextView
                android:id="@+id/textOdpA"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_below="@id/odpa"
                android:layout_marginStart="90dp"
                android:layout_marginTop="-125dp"
                android:layout_marginEnd="15dp"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/odpb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                app:srcCompat="@drawable/odpowiedzb" />

            <ImageButton
                android:id="@+id/brawoOdpB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/brawo" />

            <ImageButton
                android:id="@+id/bladOdpB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/blad2" />

            <TextView
                android:id="@+id/textOdpB"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@id/odpb"
                android:layout_marginTop="-125dp"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:gravity="center"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/odpc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                app:srcCompat="@drawable/odpowiedzc" />

            <ImageButton
                android:id="@+id/brawoOdpC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/brawo" />

            <ImageButton
                android:id="@+id/bladOdpC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/odpb"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:visibility="invisible"
                app:srcCompat="@drawable/blad2" />

            <TextView
                android:id="@+id/textOdpC"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:layout_below="@id/odpc"
                android:layout_marginTop="-125dp"
                android:text="@string/app_name"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>